{
  "name": "@bigtablet/design-system",
  "version": "1.11.0",
  "description": "Bigtablet Design System UI Components",
  "type": "module",
  "types": "dist/index.d.ts",
  "style": "dist/index.css",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./next": {
      "types": "./dist/next.d.ts",
      "import": "./dist/next.js"
    },
    "./style.css": "./dist/index.css",
    "./scss/token": "./dist/styles/scss/token.scss"
  },
  "files": [
    "dist",
    "src/styles/scss",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css",
    "**/*.scss",
    "./dist/next.css"
  ],
  "scripts": {
    "build": "tsup && pnpm run copy:scss",
    "copy:scss": "node scripts/copy-scss.mjs",
    "dev": "tsup --watch",
    "storybook": "storybook dev -p 6006",
    "build:sb": "storybook build",
    "prepublishOnly": "pnpm run build",
    "test": "echo \"no tests yet\"",
    "chromatic": "npx chromatic --project-token=chpt_2f758912f0dde5c --build-script-name=build:sb"
  },
  "keywords": [
    "design-system",
    "react",
    "storybook",
    "ui"
  ],
  "author": "sangmin",
  "license": "MIT",
  "packageManager": "pnpm@10.20.0",
  "peerDependencies": {
    "lucide-react": ">=0.552.0",
    "react": "^19",
    "react-dom": "^19",
    "react-toastify": ">=11.0.5"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.1",
    "@semantic-release/npm": "^13.1.1",
    "@storybook/addon-essentials": "8.6.14",
    "@storybook/react": "8.6.14",
    "@storybook/react-vite": "8.6.14",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "chromatic": "^13.3.3",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "esbuild-sass-plugin": "^3",
    "lucide-react": "^0.552.0",
    "next": "16.0.10",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-toastify": "^11.0.5",
    "sass-embedded": "^1.93.3",
    "semantic-release": "^25.0.1",
    "storybook": "8.6.14",
    "tsup": "^8.5.0",
    "typescript": "^5",
    "vite": "^5"
  },
  "publishConfig": {
    "access": "public"
  }
}
