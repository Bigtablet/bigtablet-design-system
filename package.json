{
  "name": "@bigtablet/design-system",
  "version": "1.18.5",
  "description": "Bigtablet Design System UI Components",
  "type": "module",
  "types": "dist/index.d.ts",
  "style": "dist/index.css",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bigtablet/bigtablet-design-system.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./next": {
      "types": "./dist/next.d.ts",
      "import": "./dist/next.js"
    },
    "./style.css": "./dist/index.css",
    "./scss/token": "./dist/styles/scss/token.scss",
    "./vanilla": {
      "style": "./dist/vanilla/bigtablet.min.css",
      "default": "./dist/vanilla/bigtablet.min.js"
    },
    "./vanilla/style.min.css": "./dist/vanilla/bigtablet.min.css",
    "./vanilla/bigtablet.min.js": "./dist/vanilla/bigtablet.min.js"
  },
  "files": [
    "dist",
    "!dist/vanilla/bigtablet.css",
    "!dist/vanilla/bigtablet.js",
    "!dist/vanilla/examples",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css",
    "**/*.scss",
    "./dist/next.css"
  ],
  "scripts": {
    "build": "tsup && pnpm run copy:scss && pnpm run build:vanilla",
    "build:vanilla": "node scripts/build-vanilla.mjs",
    "copy:scss": "node scripts/copy-scss.mjs",
    "dev": "tsup --watch",
    "storybook": "storybook dev -p 6006",
    "build:sb": "storybook build",
    "test": "vitest run --project unit",
    "test:watch": "vitest --project unit",
    "test:coverage": "vitest run --project unit --coverage",
    "chromatic": "npx chromatic --project-token=chpt_2f758912f0dde5c --build-script-name=build:sb"
  },
  "keywords": [
    "design-system",
    "react",
    "storybook",
    "ui",
    "vanilla",
    "thymeleaf",
    "html",
    "css"
  ],
  "author": "sangmin",
  "license": "MIT",
  "packageManager": "pnpm@10.20.0",
  "peerDependencies": {
    "lucide-react": ">=0.552.0",
    "react": "^19",
    "react-dom": "^19",
    "react-toastify": ">=11.0.5"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.1",
    "@semantic-release/npm": "^13.1.1",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-vitest": "10.1.11",
    "@storybook/react": "10.1.11",
    "@storybook/react-vite": "10.1.11",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^24",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/browser-playwright": "^4.0.17",
    "@vitest/coverage-v8": "^4.0.17",
    "chromatic": "^13.3.3",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "esbuild-sass-plugin": "^3",
    "jsdom": "^28.0.0",
    "lucide-react": "^0.552.0",
    "next": "16.1.5",
    "playwright": "^1.57.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "react-toastify": "^11.0.5",
    "sass-embedded": "^1.93.3",
    "semantic-release": "^25.0.1",
    "storybook": "10.1.11",
    "tsup": "^8.5.0",
    "typescript": "^5",
    "vite": "^5",
    "vitest": "^4.0.17"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "pnpm": {
    "overrides": {
      "rollup": "^4.59.0",
      "lodash": "^4.17.23",
      "lodash-es": "^4.17.23"
    }
  }
}
