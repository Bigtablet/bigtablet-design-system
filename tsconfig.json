{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "strict": true,
    "skipLibCheck": true,

    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist",

    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"]
}